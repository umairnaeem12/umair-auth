generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  dbUrl     String
  jwtSecret String
  createdAt DateTime @default(now())

  @@map("Project")
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String
  password     String
  isVerified   Boolean   @default(false)
  otpCode      String?
  otpExpiresAt DateTime?
  createdAt    DateTime  @default(now())
  projectId    String

  @@unique([email, projectId])
}
